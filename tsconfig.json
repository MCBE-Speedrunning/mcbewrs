/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
	"compilerOptions": {
		/* Basic Options */
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist/",
		/* Strict Type-Checking Options */
		"strict": true,
		"baseUrl": "./src/",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types"
		],
		"lib": [
			"ESNext",
			"DOM",
			"WebWorker",
		],
	},
	"exclude": [
		"./src/public/cdn/components/",
		"./node_modules/",
		"./dist/"
	],
	"include": [
		"./src/"
	],
}