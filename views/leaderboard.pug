extends layout

block content
    div.leaderboard
        h1 Pagetitle: #{pageName}
        table
            tr
                th Date
                th Time+Video
                th Player
                th Nation
                th Platform
                th Version
                th Duration
                th SR.C
            each run in leaderboard
                tr
                    td=run.rowid
                    td
                        a(href=run.video) #{run.time}
                    td=run.name
                    td(class="nationality")=run.nationality
                    td=run.platform
                    td=run.version
                    td=run.duration
                    td
                        a(href=`https://www.speedrun.com/run/${id}`) Link
