extends layout

block content
    div.leaderboard
        h1 Pagetitle: #{pageName}
        table
            tr
                th Date
                th Time+Video
                th Player
                th Nation
                th Platform
                th Version
                th Duration
            each run in leaderboard
                tr
                    td=run.date
                    td
                        a(href=run.link) #{run.time}
                    td=run.runner
                    td(class="nationality")=run.nationality
                    td=run.platform
                    td=run.version
                    td=run.duration
