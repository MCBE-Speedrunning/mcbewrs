extends layout

block content
	.leaderboard
		h1 #{player}
		h1 Stats
		table.table.table-hover.table-sm.table-striped
			thead
				tr
					th Current WRs
					th Total WRs
					th Unique Categories
					th Total Duration (Days)
			tbody
				tr
					td= current_wrs
					td= total_wrs
					td= unique_cats
					td= total_duration
		h1 Official WRs
		table.table.table-hover.table-sm.table-striped
			thead
				tr
					th Date
					th Category
					th Time+Video
					th Platform
					th Version
					th Duration (Days)
			tbody
				each run in runs
					tr
						td= run.date
						td
							a(href="#") #{run.readable}
						td
							a(href=run.link, target="_blank") #{run.time}
						td= run.platform
						td= run.version
						td= run.duration
