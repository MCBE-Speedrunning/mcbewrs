extends layout

block Head
	// Meta data that should be used everywhere else 
	- const title = 'MCBE WR History';
	- const description = 'World record history for Minecraft: Bedrock Edition';
	- const url = full_url;
	- const type = 'website';
	- const image = '/cdn/favicon.png';

	title #{title}

	// Generic meta data
	meta(name="title", content=title)/
	meta(name="description", content=description)/

	// Open Graph / Facebook
	// Used by many others such as discord
	meta(property="og:title", content=title)/
	meta(property="og:url", content=url)/
	meta(property="og:type", content=type)/
	meta(property="og:image", content=image)/
	meta(property="og:description", content=description)/

	// Twitter
	meta(property="twitter:title", content=title)/
	meta(property="twitter:url", content=url)/
	meta(property="twitter:card", content=type)/
	meta(property="twitter:image", content=image)/
	meta(property="twitter:description", content=description)/

block content
	.home
		h1 World Record History
		.row
			.card.col-sm-12
				img.card-img-top(src="/cdn/assets/card_main.jpg", alt="Full Game")
				.card-body
					h5.card-title Full Game
					p.card-text Full Game WR History
					p
						button.btn.btn-primary(type="button")
							a(href="/catselect/main") View

		.row
			.card.col-sm-6
				img.card-img-top(src="/cdn/assets/card_il.jpg", alt="Individual Levels")
				.card-body
					h5.card-title Individual Levels
					p.card-text Individual Levels WR History
					p
						//- This won't work but I don't need to fix it yet
						button.btn.btn-primary(type="button", href="/catselect/il", disabled) View

			.card.col-sm-6
				img.card-img-top(
					src="/cdn/assets/card_catext.jpg",
					alt="Category Extensions"
				)
				.card-body
					h5.card-title Category Extensions
					p.card-text Category Extensions WR History
